@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>登陆</title>
    <style type="text/css">
        #app {
            position: absolute;
            top: 0;
            bottom: 0;
            width: 100%;
        }

        .title {
            margin: 0px auto 40px auto;
            text-align: center;
            color: #505458;
        }

        .login-container {
            border-radius: 5px;
            -moz-border-radius: 5px;
            background-clip: padding-box;
            margin: 180px auto;
            width: 350px;
            padding: 35px 35px 15px;
            background: #fff;
            border: 1px solid #eaeaea;
            box-shadow: 0 0 25px #cac6c6;
        }

        .remember {
            margin: 0px 0px 35px 0px;
        }
    </style>
</head>
<body>
    <div id="app">

        <form action="/Login/index" method="post" class="el-form demo-ruleForm login-container el-form--label-left">
            <h3 class="title">系统登录</h3>
            <div class="el-form-item is-required">
                <div class="el-form-item__content" style="margin-left: 0px;">
                    <div class="el-input">
                        <input type="text" name="username" placeholder="账号" class="el-input__inner">
                    </div>
                </div>
            </div>
            <div class="el-form-item is-required">

                <div class="el-form-item__content" style="margin-left: 0px;">
                    <div class="el-input">
                        <input type="password" name="password" placeholder="密码" class="el-input__inner">
                    </div>
                </div>
            </div> <label class="el-checkbox remember">
                <span class="el-checkbox__input is-checked">
                    <span class="el-checkbox__inner">
                    </span><input type="checkbox" class="el-checkbox__original" value="">
                </span><span class="el-checkbox__label">
                    记住密码
                </span>
            </label> <div class="el-form-item" style="width: 100%;">
                <div class="el-form-item__content" style="margin-left: 0px;">
                    <button type="submit" class="el-button el-button--primary" style="width: 100%;">
                        <span>登录</span>
                    </button>
                </div>
            </div>
        </form>
    </div>

</body>
</html>



