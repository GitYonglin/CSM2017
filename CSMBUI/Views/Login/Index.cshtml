@{
    ViewData["Title"] = "登陆";
}
@section css{
<style type="text/css">
    #app {
        position: absolute;
        top: 0;
        bottom: 0;
        width: 100%;
    }

    .title {
        margin: 0px auto 40px auto;
        text-align: center;
        color: #505458;
    }

    .login-container {
        border-radius: 5px;
        -moz-border-radius: 5px;
        background-clip: padding-box;
        margin: 180px auto;
        width: 350px;
        padding: 35px 35px 15px;
        background: #fff;
        border: 1px solid #eaeaea;
        box-shadow: 0 0 25px #cac6c6;
    }

    .remember {
        margin: 0px 0px 35px 0px;
    }
</style>
}

<div id="app">
    <h2>{{ ms }}</h2>
    <el-form action="/Login/index" method="post" :model="loginForm" :rules="login" ref="loginForm" label-position="left" label-width="0px" class="demo-ruleForm login-container">
        <h3 class="title">系统登录</h3>
        <el-form-item prop="username">
            <el-input type="text" name="username" v-model="loginForm.username" auto-complete="off" placeholder="账号"></el-input>
        </el-form-item>
        <el-form-item prop="password">
            <el-input type="password" name="password" v-model="loginForm.password" auto-complete="off" placeholder="密码"></el-input>
        </el-form-item>
        <el-checkbox v-model="checked" checked class="remember">记住密码</el-checkbox>
        <el-form-item style="width:100%;">
            <el-button type="primary" native-type="submit" style="width:100%;" :loading="logining">登录</el-button>
        </el-form-item>
    </el-form>
</div>


@section js{
<script>
    var Main = {
        data() {
            return {
                logining: false,
                loginForm: {
                    username: '',
                    password: '',
                },
                checked: false,
                login: {
                    username: [{
                        required: true,
                        message: '请输用户名',
                        trigger: 'blur'
                    }, {
                        min: 5,
                        max: 20,
                        message: '长度在 5 到 20 个字符',
                        trigger: 'blur'
                    }],
                    checkPass: [{
                        required: true,
                        message: '请输入密码',
                        trigger: 'blur'
                    }, {
                        min: 6,
                        max: 22,
                        message: '长度在 6 到 22 个字符',
                        trigger: 'blur'
                    }]

                }
            };
        },
        methods: {}
    }
    var Ctor = Vue.extend(Main)
    new Ctor().$mount('#app')
</script>
}